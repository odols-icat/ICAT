***INCLUDE LZRM_VALORACIO_OFERTESI07.
*----------------------------------------------------------------------*
*&---------------------------------------------------------------------*
*&      Module  EXIT_COMMAND_0900  INPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE exit_command_0900 INPUT.
  DATA: l_answer1 TYPE c.
*"Es comprova si s'han relitzat canvis a la simulació abans de sortir
  IF gr_coautors_alv->get_flag_changes( ) = abap_on.
    CLEAR:l_answer1.
    CALL FUNCTION 'POPUP_TO_CONFIRM'
      EXPORTING
        titlebar              = text-i01
        text_question         = text-i02
        display_cancel_button = abap_off
      IMPORTING
        answer                = l_answer1.
    CHECK l_answer1 = 1.
  ENDIF.

  CALL METHOD cl_gui_cfw=>flush.
  LEAVE TO LIST-PROCESSING AND RETURN TO SCREEN 0.
ENDMODULE.

*&---------------------------------------------------------------------*
*&      Module  USER_COMMAND_0900  INPUT
*&---------------------------------------------------------------------*
MODULE user_command_0900 INPUT.
  IF gr_coautors_alv IS BOUND.
    gr_coautors_alv->user_command( sy-ucomm ).
  ENDIF.
ENDMODULE.
*&---------------------------------------------------------------------*
*&      Module  USER_COMMAND_0901  INPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE user_command_0901 INPUT.
  IF gr_coautors_alv IS BOUND.
    gr_coautors_alv->user_command( sy-ucomm ).
  ENDIF.
ENDMODULE.
